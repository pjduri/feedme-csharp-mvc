@using System.Text.Json;
@using System.Text.Json.Serialization;
@using feedme_csharp_mvc.Models
@model ChoiceList

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Model.Name</h4>
    <table class="table">
    <tr>
        <th>Id</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <th>Options</th>
        <td>
        @if (Model.Options != null && Model.Options.Count > 0) 
        {
            @foreach (ListOption option in Model.Options)
            {
                @(option.Name + ",")
            }
            
        }
        </td>
    </tr>
</table>
    <hr />
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
    <h3 id="randomOption"><a asp-controller="ListOptions" asp-action="Details" asp-route-id="@Model.GetRandomOption().Id">Pick Me Something!</a></h3>
</div>

