<div>
    <h4>Model.Name</h4>
    <table class="table">
    <tr>
        <th>Id</th>
        <td>@Model.Id</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>
    <tr>
        <th>Description</th>
        <td>@Model.Description</td>
    </tr>
    <tr>
        <th>Options</th>
        <td>
        @if (Model.Options != null && Model.Options.Count > 0) 
        {
            @foreach (ListOption option in Model.Options)
            {
                @(option.Name + ",")
            }
            
        }
        </td>
    </tr>

</table>
