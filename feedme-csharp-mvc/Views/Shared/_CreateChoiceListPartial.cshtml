@model feedme_csharp_mvc.ViewModels.AddChoiceListViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Option1Name" class="control-label"></label>
                <input asp-for="Option1Name" class="form-control" />
                <span asp-validation-for="Option1Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Option2Name" class="control-label"></label>
                <input asp-for="Option2Name" class="form-control" />
                <span asp-validation-for="Option2Name" class="text-danger"></span>
            </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
