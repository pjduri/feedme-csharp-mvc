@model feedme_csharp_mvc.ViewModels.AddOptionViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            @if (Model.ChoiceLists != null && Model.ChoiceLists.Count > 0)
            {
            <div class="form-group">
                    <label asp-for="ChoiceListId" class="control-label"></label>
                <select asp-for="ChoiceListId" class ="form-control" asp-items="@Model.ChoiceLists"></select>
            </div>
            }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
